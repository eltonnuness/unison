<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="391.0" prefWidth="615.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.co.sleonard.unison.gui.PajekPanelFX">
   <children>
      <RadioButton fx:id="creatorRadio" layoutX="23.0" layoutY="15.0" mnemonicParsing="false" text="Thread creator vs Current Poster">
         <toggleGroup>
            <ToggleGroup fx:id="option" />
         </toggleGroup>
         <tooltip>
            <Tooltip text="&quot;This takes the details of the message's poster along with that of the person who started the thread." />
         </tooltip></RadioButton>
      <RadioButton fx:id="previousRadio" layoutX="23.0" layoutY="44.0" mnemonicParsing="false" text="Previous poster vs current" toggleGroup="$option">
         <tooltip>
            <Tooltip text="This takes the current poster and that of the last message. i.e. the one they actually replied to." />
         </tooltip></RadioButton>
      <RadioButton fx:id="allRadio" layoutX="23.0" layoutY="72.0" mnemonicParsing="false" text="All thread posters to current" toggleGroup="$option">
         <tooltip>
            <Tooltip text="This uses all the authors in the thread up to the point of this message." />
         </tooltip></RadioButton>
      <Button fx:id="previewButton" layoutX="274.0" layoutY="11.0" mnemonicParsing="false" onAction="#previewButtonAction" prefHeight="25.0" prefWidth="114.0" text="Refresh" />
      <Button fx:id="saveButton" layoutX="395.0" layoutY="11.0" mnemonicParsing="false" onAction="#saveButtonFile" prefHeight="25.0" prefWidth="114.0" text="Save to Pajek">
         <tooltip>
            <Tooltip text="Save to Pajek Network file (as in Pajek File Preview tab)" />
         </tooltip></Button>
      <Button fx:id="csvButton" layoutX="395.0" layoutY="44.0" mnemonicParsing="false" onAction="#csvButtonFile" prefHeight="25.0" prefWidth="114.0" text="Save to CSV">
         <tooltip>
            <Tooltip text="Save to Comma-separated  file (as in Matrixtab).  This can be read into Excel." />
         </tooltip></Button>
      <TabPane layoutX="8.0" layoutY="117.0" prefHeight="270.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Graph">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab text="Matrix">
               <content>
                  <TreeTableView fx:id="resultsMatrixTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TreeTableColumn prefWidth="75.0" text="Subject" />
                      <TreeTableColumn prefWidth="75.0" text="Date" />
                        <TreeTableColumn prefWidth="75.0" text="FROM" />
                        <TreeTableColumn prefWidth="75.0" text="TO" />
                    </columns>
                  </TreeTableView>
               </content>
          </Tab>
            <Tab text="Pajek File Preview">
               <content>
                  <TextArea fx:id="filePreviewArea" prefHeight="200.0" prefWidth="200.0" />
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
